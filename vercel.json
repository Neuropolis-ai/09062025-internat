{
  "name": "lyceum-platform",
  "version": 2,
  "builds": [
    {
      "src": "admin-web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:web",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/app/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "/app",
      "dest": "/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/admin-web/$1"
    }
  ]
} 