{
  "name": "lyceum-platform",
  "version": 2,
  "builds": [
    {
      "src": "admin-web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/app",
      "destination": "/dist/index.html"
    },
    {
      "source": "/app/(.*)",
      "destination": "/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/admin-web/$1"
    }
  ]
} 